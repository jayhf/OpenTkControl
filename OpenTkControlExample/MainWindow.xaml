            <Button Width="100"
                    Height="30"
                    Content="start procedure"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Click="ButtonBase_OnClick" />
            <Button Content="close procedure" 
                    Click="Close_OnClick"/>
            <Button VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Width="120"
                    Height="30"
                    Content="change render continuous"
                    Click="Test_OnClick"/>
        </StackPanel>

